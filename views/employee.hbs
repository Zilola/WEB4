<div class="container">
    <div class="row">
        {{#each employee}}
        <div class="col-md-12">
            <h2>{{this.firstName}} {{this.lastName}} - Employee: {{this.employeeNum}}</h2>
            <hr />
            <form method="post" action="/employee/update">
            <input class="form-control" id = "employeeNum" name= "employeeNum" type="hidden" value ="{{employeeNum}}"/>
                <fieldset>
                    <legend>Personal Information</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstName">First Name:</label>
                                <input class="form-control" id="firstName" name="firstName" type="text"
                                    value="{{firstName}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lastName">Last Name:</label>
                                <input class="form-control" id="lastName" name="lastName" type="text"
                                    value=" {{lastName}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input class="form-control" id="email" name="email" type="text" value="{{email}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="SSN">Social Security Num:</label>
                                <input class="form-control" id="SSN" type="text" value="{{SSN}}" readonly>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressStreet">Address (Street)</label>
                                <input class="form-control" id="addressStreet" name="addressStreet" type="text"
                                    value="{{addressStreet}}">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressCity">Address (City)</label>
                                <input class="form-control" id="addressCity" name="addressCity" type="text"
                                    value="{{addressCity}}">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressState">Address (State):</label>
                                <input class="form-control" id="addressState" name="addressState" type="text"
                                    value="{{addressState}}">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressPostal">Address(Zip Code)</label>
                                <input class="form-control" id="addressPostal" name="addressPostal" type="text"
                                    value="{{addressPostal}}">
                            </div>
                        </div>
                </fieldset>
                <fieldset>
                    <legend>Company Information</legend>
                    <div class="row"> 
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="isManager">Manager:</label>
                                <input class="form-control" id="isManager" name="isManager" type="checkbox"
                                 {{#if this.isManager}} checked {{/if}}>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="employeeManagerNum">Employee's Manager Number:</label>
                                <input class="form-control" id="employeeManagerNum" name="employeeManagerNum"
                                    type="text" value="{{employeeManagerNum}}">
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Status:</label>
                                <br>
                                <label class="checkbox-inline">
                                    <input type="radio" id="statusFT" name="status" {{#equal this.status "Full Time"}}checked  {{/equal}} value="{{status}}">
                                    " Full Time "
                                </label>
                                <label class="checkbox-inline">
                                    <input type="radio" id="statusPT" name="status" {{#equal this.status "Part Time"}} checked {{/equal}} value="{{status}}">
                                    " Part Time "
                                </label>
                            </div>
                        </div>
                        {{!-- {{#equal this.department "{{department}}"}} --}}
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="department">Department</label>
                                <select class="form-control" id="department" name="Department" value="{{department}}">
                                    <option value="1" {{#equal department "1" }} selected {{/equal}}>Creative Service</option>
                                    <option value="2" {{#equal department "2"}} selected {{/equal}}>Product Development</option>
                                    <option value="3" {{#equal department "3"}} selected {{/equal}}>Marketing</option>
                                    <option value="4" {{#equal department "4"}} selected {{/equal}}>Strategic Planning</option>
                                    <option value="5" {{#equal department "5"}} selected {{/equal}}>Accounting</option>
                                    <option value="6" {{#equal department "6"}} selected {{/equal}}>Human Resources</option>
                                    <option value="7" {{#equal department "7"}} selected {{/equal}}>Quality Analysis</option>
                                </select>
                            </div>
                        </div>
                        {{!-- {{/equal}} --}}
                    </div>
                </fieldset>
                <fieldset>
                        <div class="col=md-12">
                            <label for="hireDate">Hire Date</label>
                                <input class="form-control" id="hireDate" name="hireDate" type="text"
                                    value="{{hireDate}}" readonly>
                        </div>
                </fieldset>
                <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
            </form>
        </div>
        {{/each}}
        <hr>
    </div>
     {{#unless employee}}
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>